<Window x:Class="Shuuuuuu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shuuuuuu"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="StartWindow" Height="450" Width="800" Background="White">
    <Grid>
        <Border Height="380" Width="720" CornerRadius="20" Background="Chocolate">
            <TextBlock Text="Добро пожаловать" FontSize="50" HorizontalAlignment="Center"/>
        </Border>
        <TextBlock Text="Логин" FontSize="20" Margin="70,142,649,241"/>
        <TextBlock Text="Пароль" FontSize="20" Margin="70,212,649,171"/>
        <TextBox x:Name="LoginBox" Height="50" FontSize="20" Margin="178,128,178,241" TextAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Height="50" FontSize="20" Margin="178,198,178,171" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="RegBtn" Click="RegBtn_Click" Content="Регистрация" FontSize="20" Background="Beige" Margin="70,305,544,50"/>
        <Button x:Name="VxodBtn" Click="VxodBtn_Click" Content="Войти" FontSize="20" Background="Beige" Margin="544,305,70,50"/>
    </Grid>
</Window>
